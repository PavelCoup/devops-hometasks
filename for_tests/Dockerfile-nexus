FROM debian
SHELL ["/bin/bash", "-c"]
RUN apt-get update && apt-get upgrade \
&& echo 'debconf debconf/frontend select Noninteractive' | debconf-set-selections \
&& apt-get install -y locales locales-all apt-utils ansible
ENV LC_ALL en_US.UTF-8
ENV LANG en_US.UTF-8
ENV LANGUAGE en_US.UTF-8
COPY ./playbook-nexus.yaml /scripts/playbook-nexus.yaml
RUN ansible-galaxy install geerlingguy.java \
&& ansible-galaxy install ansible-thoteam.nexus3-oss \
&& sed -i.bak 's/timeout: 1800/timeout: 1/g' /root/.ansible/roles/ansible-thoteam.nexus3-oss/handlers/main.yml \
&& ansible-playbook /scripts/playbook-nexus.yaml
ENTRYPOINT service nexus start && tail -F /var/log/faillog

